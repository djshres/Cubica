@model Cubica.Models.ViewModel.CubicalBookingResult
 
<h1 class="display-4">Your Cubical is booked</h1>
<p class="lead">
    for the whole day!
</p>
<p>
    Hi @Model.FirstName,
</p>
<p>
    A Cubical was booked for you
    on <strong>@Model.Date.ToShortDateString()</strong>.<br />
    Your booking number is <strong>@Model.BookingId</strong>.<br />
    
</p>


<div>
    <a class="btn-primary btn" style="margin-top: 25px"  asp-action="Book">Book another Cubical</a>
</div>
